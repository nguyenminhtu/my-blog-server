<% include ../header.ejs %>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h3 class="text-center page-header">Add more category</h3>
            <form action="/posts/edit/<%=post._id%>?_csrf=<%= csrfToken %>" method="post" role="form" enctype="multipart/form-data">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                    <label for="">Title: </label>
                    <input type="text" class="form-control" value="<%=post.title%>" name="title" placeholder="Post title..." required autofocus>
                </div>
                <div class="form-group">
                    <label for="">Category: </label>
                    <select name="category" class="form-control">
                        <% cates.forEach(function(cate){ %>
                        <option value="<%= cate._id %>"
                            <%if(post.category_name === cate.name){%>
                                selected
                            <%}%>
                        ><%= cate.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="">Description: </label>
                    <textarea name="description" rows="5" class="form-control" placeholder="Description..."><%=post.description%></textarea>
                </div>
                <div class="form-group">
                    <label for="">Image: </label>
                    <input type="file" class="form-control" name="image">
                    <input type="hidden" name="old_image" value="<%=post.image%>">
                    <img style="height: 200px" src="/uploads/<%= post.image %>" alt="<%=post.title%>" class="img-responsive text-center thumbnail image-edit">
                </div>
                <div class="form-group">
                    <label for="">Content: </label>
                    <textarea name="content" rows="5" class="form-control" placeholder="Content..."><%=post.content%></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>